<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/login_close_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:src="@drawable/coupang_logo"
        app:layout_constraintTop_toBottomOf="@id/login_close_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/login_email_et"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/sign_up_edit_text"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:hint="쿠팡 아이디(이메일) 입력"
        android:textSize="14sp"
        android:paddingStart="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_logo_iv"/>

    <TextView
        android:id="@+id/login_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/login_email_et"
        app:layout_constraintStart_toStartOf="@id/login_email_et"
        app:layout_constraintBottom_toBottomOf="@id/login_email_et"/>

    <EditText
        android:id="@+id/login_password_et"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/sign_up_edit_text"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:hint="비밀번호 입력"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:paddingStart="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_email_et"/>

    <TextView
        android:id="@+id/login_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/login_password_et"
        app:layout_constraintStart_toStartOf="@id/login_password_et"
        app:layout_constraintBottom_toBottomOf="@id/login_password_et"/>

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="로그인"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="#4D6AFF"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_password_et"/>

    <LinearLayout
        android:id="@+id/login_user_tools_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_tv">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  |  "
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  |  "
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#2C5BFF"
            android:textSize="12sp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>