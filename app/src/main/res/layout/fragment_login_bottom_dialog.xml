<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/login_dialog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이츠 시작하기"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/login_dialog_summary_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지금 로그인하고\n무료배달과 기간 한정 쿠폰 혜택 놓치지 마세요."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/login_dialog_title_tv"
        app:layout_constraintStart_toStartOf="@id/login_dialog_title_tv"/>

    <TextView
        android:id="@+id/login_dialog_coupang_login_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="쿠팡 앱으로 간편 로그인"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="#0776FF"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_dialog_summary_tv"/>

    <TextView
        android:id="@+id/login_dialog_email_login_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="쿠팡 아이디(이메일)로 로그인"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/textview_stroke"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_dialog_coupang_login_tv"/>

    <TextView
        android:id="@+id/login_dialog_sign_up_question_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 회원이 아니신가요?"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintTop_toBottomOf="@id/login_dialog_email_login_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/login_dialog_sign_up_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="#0776FF"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/login_dialog_sign_up_question_tv"
        app:layout_constraintTop_toTopOf="@id/login_dialog_sign_up_question_tv"
        app:layout_constraintBottom_toBottomOf="@id/login_dialog_sign_up_question_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>