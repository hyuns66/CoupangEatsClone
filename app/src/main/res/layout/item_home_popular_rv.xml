<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_home_popular_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/popular_restaurant"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/item_home_popular_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음식점 이름"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/item_home_popular_iv"
        app:layout_constraintStart_toStartOf="@id/item_home_popular_iv"/>

    <ImageView
        android:id="@+id/item_home_popular_star_point_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_review_yellow_star"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/item_home_popular_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_home_popular_title_tv"/>

    <TextView
        android:id="@+id/item_home_popular_star_point_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="별점"
        android:layout_marginStart="5dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/item_home_popular_star_point_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_home_popular_star_point_iv"
        app:layout_constraintStart_toEndOf="@id/item_home_popular_star_point_iv"/>

    <TextView
        android:id="@+id/item_home_popular_dot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="·"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/item_home_popular_star_point_tv"
        app:layout_constraintTop_toTopOf="@id/item_home_popular_star_point_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_home_popular_star_point_iv"/>

    <TextView
        android:id="@+id/item_home_popular_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거리"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/item_home_popular_dot_tv"
        app:layout_constraintTop_toTopOf="@id/item_home_popular_star_point_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_home_popular_star_point_iv"/>

    <TextView
        android:id="@+id/item_home_popular_delivery_fee_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달비"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/item_home_popular_iv"
        app:layout_constraintTop_toBottomOf="@id/item_home_popular_star_point_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>