<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/setting_arrow_back_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_left"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/setting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/setting_arrow_back_iv"
        app:layout_constraintTop_toTopOf="@id/setting_arrow_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/setting_arrow_back_iv"/>

    <TextView
        android:id="@+id/setting_delivery_state_alarm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달 현황 알림"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/setting_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/setting_delivery_state_alarm_switch"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/setting_delivery_state_alarm_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/setting_delivery_state_alarm_tv"/>

    <TextView
        android:id="@+id/setting_benefit_alarm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쿠폰&amp;혜택 정보 알림"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_delivery_state_alarm_tv"/>

    <Switch
        android:id="@+id/setting_benefit_alarm_switch"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/setting_benefit_alarm_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/setting_benefit_alarm_tv"/>

    <TextView
        android:id="@+id/setting_language_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="언어"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_benefit_alarm_tv"/>

    <TextView
        android:id="@+id/setting_language_system_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시스템 기본설정"
        android:textSize="18sp"
        android:textColor="#3690FF"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_benefit_alarm_tv"/>

    <TextView
        android:id="@+id/setting_logout_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_language_tv"/>

    <TextView
        android:id="@+id/setting_app_ver_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App ver. 1.3.27"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_logout_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>